extends layout

block content
  div.row
    div.col-12.px-0
      h3 Camera
    div.col-md-7.ps-0
      div.camera

    div.col-md-5
      //- ON/Off Timing
      div#power.card.p-3.on
        div.row
          div.col-6
            h5#robot_status Robot is ON
            a#shutdown.btn.btn-sm.btn-danger(href='#') 
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M11 13V3h2v10h-2Zm1 8q-1.85 0-3.488-.713T5.65 18.35q-1.225-1.225-1.938-2.863T3 12q0-2 .825-3.775T6.15 5.15L7.6 6.6q-1.25.95-1.925 2.375T5 12q0 2.9 2.05 4.95T12 19q2.925 0 4.963-2.05T19 12q0-1.6-.663-3.025T16.4 6.6l1.45-1.45q1.5 1.3 2.325 3.075T21 12q0 1.85-.713 3.488t-1.924 2.862q-1.213 1.225-2.85 1.938T12 21Z"/></svg>
              span.mx-1 Power OFF
            a#poweron.btn.btn-sm.btn-success(href='#' style='display:none') 
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M11 13V3h2v10h-2Zm1 8q-1.85 0-3.488-.713T5.65 18.35q-1.225-1.225-1.938-2.863T3 12q0-2 .825-3.775T6.15 5.15L7.6 6.6q-1.25.95-1.925 2.375T5 12q0 2.9 2.05 4.95T12 19q2.925 0 4.963-2.05T19 12q0-1.6-.663-3.025T16.4 6.6l1.45-1.45q1.5 1.3 2.325 3.075T21 12q0 1.85-.713 3.488t-1.924 2.862q-1.213 1.225-2.85 1.938T12 21Z"/></svg>
              span.mx-1 Power ON
          div.col-6
            div#timer 00:00:00

      //- Battery Level
      div.card.p-3.mt-2
        div.row
          div.col-6
            h4 Battery Level
          div.col-6.text-end
            h5 
              <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24"><path fill="currentColor" d="M7 22V4h3V2h4v2h3v18H7ZM9 8h6V6H9v2Z"/></svg>
              span 80%
      
      //- Alarm Buzzer
      div#alarm.card.p-3.mt-2
        div.row
          div.col-7
            h4 Alarm
            p.det.mb-0 
          div.col-5.text-end
            h4 
              button.btn.btn-light.btn-sm.mx-3#alarmOff Turn OFF
              <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24"><path fill="currentColor" d="M2.725 21q-.275 0-.5-.138t-.35-.362q-.125-.225-.138-.488t.138-.512l9.25-16q.15-.25.388-.375T12 3q.25 0 .488.125t.387.375l9.25 16q.15.25.138.513t-.138.487q-.125.225-.35.363t-.5.137H2.725Zm1.725-2h15.1L12 6L4.45 19ZM12 18q.425 0 .713-.288T13 17q0-.425-.288-.713T12 16q-.425 0-.713.288T11 17q0 .425.288.713T12 18Zm0-3q.425 0 .713-.288T13 14v-3q0-.425-.288-.713T12 10q-.425 0-.713.288T11 11v3q0 .425.288.713T12 15Zm0-2.5Z"/></svg>

  div.row.mt-4
    div.col-md-4.ps-0
      h3 Temperature
      div#temp.graph
    div.col-md-4.position-relative
      h3 Gas Sensor
      div.keys
        span.co2 CO2
        span.lpg LPG
        span.ch4 CH4
      div#gas.graph
    div.col-md-4
      h3 Flame Sensor
      div#flame.graph

  script(src="javascripts/charts.js") 